---
import Sidebar from "@components/Sidebar.astro";
import Header from "@components/Header.astro";
import Footer from "@components/Footer.astro";
import ApiErrorToast from "@components/ApiErrorToast.astro";
import "../styles/global.css";
const { title } = Astro.props;
---

<!doctype html>
<html lang="es" class="dark">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="Desarrollador Frontend con experiencia en React, Next.js y TypeScript. Enfocado en UI/UX y diseño de producto con Figma, optimizando productos y MVPs. Con conocimientos en la creación de landing pages con Astro."
    />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
  </head>
  <body>
    <div id="layout">
      <Header />
      <div id="main-content">
        <Sidebar />
        <main
          class="relative bg-gradient-to-r from-rose-50 to-teal-50 dark:from-dark-600 dark:to-dark-500"
        >
          <div class="absolute inset-0 -z-10"></div>
          <slot />
        </main>
      </div>
      <Footer />
    </div>
    <ApiErrorToast />
    <script src="../js/app.ts/"></script>
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    padding: 0;
    height: 100%;
    width: 100%;
    overflow: hidden;
  }

  #layout {
    display: flex;
    flex-direction: column;
    height: 100%;
  }

  header {
    flex-shrink: 0;
    height: 50px;
  }

  #main-content {
    display: flex;
    flex: 1;
    overflow: hidden;
    position: relative;
  }

  aside#sidebar {
    flex-shrink: 0;
    transition: width 0.3s ease;
  }

  main {
    flex: 1;
    overflow: auto;
    position: relative;
  }

  footer {
    flex-shrink: 0;
    height: 30px;
  }
</style>

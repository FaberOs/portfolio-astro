---
/**
 * Skeleton fallback for Overview component.
 * Mirrors the Overview card structure with placeholder lines.
 */
---

<div
  class="border border-light-300 dark:border-dark-400 rounded-lg p-4 text-sm space-y-2"
>
  <!-- Header -->
  <div class="flex items-center gap-2">
    <div class="h-5 w-5 rounded bg-light-200 dark:bg-dark-500 animate-pulse"></div>
    <div class="h-5 w-24 rounded-md bg-light-200 dark:bg-dark-500 animate-pulse"></div>
  </div>

  <!-- Paragraph lines -->
  <div class="space-y-2 pt-1">
    <div class="h-3.5 w-full rounded bg-light-200 dark:bg-dark-500 animate-pulse"></div>
    <div class="h-3.5 w-full rounded bg-light-200 dark:bg-dark-500 animate-pulse"></div>
    <div class="h-3.5 w-11/12 rounded bg-light-200 dark:bg-dark-500 animate-pulse"></div>
    <div class="h-3.5 w-3/4 rounded bg-light-200 dark:bg-dark-500 animate-pulse"></div>
  </div>
</div>

---
/**
 * Skeleton fallback for the project detail page ([id].astro).
 * Mirrors the title, date, description, languages, button and README block.
 */
---

<div class="max-w-3xl mx-auto py-10 px-6">
  <!-- Title -->
  <div class="h-8 w-52 rounded-md bg-light-200 dark:bg-dark-500 animate-pulse"></div>

  <!-- Date -->
  <div class="h-3.5 w-28 rounded bg-light-200 dark:bg-dark-500 animate-pulse mt-3"></div>

  <!-- Description -->
  <div class="mt-5 space-y-2">
    <div class="h-4 w-full rounded bg-light-200 dark:bg-dark-500 animate-pulse"></div>
    <div class="h-4 w-4/5 rounded bg-light-200 dark:bg-dark-500 animate-pulse"></div>
  </div>

  <!-- Languages -->
  <div class="mt-6 flex gap-4">
    {
      Array.from({ length: 3 }).map(() => (
        <div class="flex items-center gap-2">
          <div class="h-4 w-4 rounded bg-light-200 dark:bg-dark-500 animate-pulse" />
          <div class="h-3.5 w-16 rounded bg-light-200 dark:bg-dark-500 animate-pulse" />
        </div>
      ))
    }
  </div>

  <!-- GitHub button -->
  <div class="mt-6">
    <div class="h-10 w-32 rounded-md border border-light-300 dark:border-dark-400 bg-light-200 dark:bg-dark-500 animate-pulse"></div>
  </div>

  <!-- README placeholder -->
  <div class="mt-10 border-t border-light-300 dark:border-dark-400 pt-8 space-y-4">
    <div class="h-6 w-40 rounded-md bg-light-200 dark:bg-dark-500 animate-pulse"></div>
    <div class="space-y-2">
      <div class="h-3.5 w-full rounded bg-light-200 dark:bg-dark-500 animate-pulse"></div>
      <div class="h-3.5 w-full rounded bg-light-200 dark:bg-dark-500 animate-pulse"></div>
      <div class="h-3.5 w-11/12 rounded bg-light-200 dark:bg-dark-500 animate-pulse"></div>
      <div class="h-3.5 w-3/4 rounded bg-light-200 dark:bg-dark-500 animate-pulse"></div>
    </div>
    <div class="h-40 w-full rounded-lg bg-light-200 dark:bg-dark-500 animate-pulse"></div>
    <div class="space-y-2">
      <div class="h-3.5 w-full rounded bg-light-200 dark:bg-dark-500 animate-pulse"></div>
      <div class="h-3.5 w-5/6 rounded bg-light-200 dark:bg-dark-500 animate-pulse"></div>
      <div class="h-3.5 w-2/3 rounded bg-light-200 dark:bg-dark-500 animate-pulse"></div>
    </div>
  </div>
</div>

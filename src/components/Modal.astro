---
import CloseIcon from "@icons/CloseIcon.astro";

const { id } = Astro.props;
---

<dialog
  id={id}
  class="relative bg-light-50 dark:bg-dark-800 text-dark-600 dark:text-light-50 rounded-lg p-6 w-full max-w-md border border-light-300 dark:border-dark-600"
>
  <div class="flex items-center justify-between mb-4">
    <h2 class="text-2xl font-bold">Settings</h2>
    <form method="dialog">
      <button
        class="group text-xl p-1 hover:bg-light-200 dark:hover:bg-dark-700 rounded transition-colors"
      >
        <CloseIcon
          height="20"
          width="20"
          className="text-light-500 dark:text-light-400 group-hover:text-light-600 dark:group-hover:text-light-200 transition-colors"
        />
      </button>
    </form>
  </div>

  <hr class="border-light-300 dark:border-dark-600 mb-4" />

  <div class="flex items-center justify-between mb-4">
    <label class="block text-sm font-medium">Theme</label>
    <div class="flex items-center space-x-2">
      <button
        id="lightTheme"
        class="px-4 py-2 text-sm border border-light-300 dark:border-dark-600 rounded hover:bg-light-200 dark:hover:bg-dark-700 transition-colors"
      >
        Light
      </button>
      <button
        id="darkTheme"
        class="px-4 py-2 text-sm border border-light-300 dark:border-dark-600 rounded hover:bg-light-200 dark:hover:bg-dark-700 transition-colors"
      >
        Dark
      </button>
    </div>
  </div>

  <hr class="border-light-300 dark:border-dark-600 mb-4" />

  <div class="mt-6 text-xs text-center text-dark-400 dark:text-light-500">
    <p>Version 1.1.1</p>
    <p>Created by FaberOs</p>
  </div>
</dialog>

<style lang="postcss">
  dialog {
    position: fixed;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    margin: 0;
  }
  
  dialog::backdrop {
    background: rgba(0, 0, 0, 0.5);
    backdrop-filter: blur(2px);
  }
</style>

<script>
  (function () {
    const lightThemeBtn = document.getElementById("lightTheme");
    const darkThemeBtn = document.getElementById("darkTheme");

    if (lightThemeBtn) {
      lightThemeBtn.addEventListener("click", () => {
        document.documentElement.classList.remove("dark");
        localStorage.setItem("theme", "light");
      });
    }

    if (darkThemeBtn) {
      darkThemeBtn.addEventListener("click", () => {
        document.documentElement.classList.add("dark");
        localStorage.setItem("theme", "dark");
      });
    }
  })();
</script>
